{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "outDir": "build/",
    "baseUrl": "./",
    "paths": {
      "actions/*": ["./actions/*"],
      "apis/*": ["./apis/*"]
    }
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}